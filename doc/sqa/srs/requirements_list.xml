<?xml version="1.0" ?>
<requirements_specification application="SR2ML">


    <requirement_group id="Minimum Requirements">

      <requirement_set caption="Minimum Requirements">
          <requirement id_code="SR2ML-M-1">
              <description>Computer: Any POSIX (and POSIX-like) system</description>
              <source>``RAVEN User Manual'', INL/EXT-15-34123; Continous Integration System</source>
          </requirement>
          <requirement id_code="SR2ML-M-2">
              <description>RAM: 2 GB per core execution (depending on the type of analysis and data genarated)</description>
              <source>``RAVEN User Manual'', INL/EXT-15-34123; Continous Integration System</source>
          </requirement>
          <requirement id_code="SR2ML-M-3">
              <description>Language: Python 3.x</description>
              <source>``RAVEN User Manual'', INL/EXT-15-34123; Continous Integration System</source>
          </requirement>
        </requirement_set>

    </requirement_group>


    <requirement_group id="Functional Requirements">

      <requirement_set caption="Framework, I/O, Execution Control">
          <requirement id_code="SR2ML-F-1">
              <description>The SR2ML plug-in shall allow support for user-defined instructions for controlling the execution stages of the probabilistic safety, risk and reliability analysis.</description>
          </requirement>
          <requirement id_code="SR2ML-F-2">
              <description>The SR2ML plug-in shall allow for user-defined output types for simulation data.</description>
          </requirement>
      </requirement_set>

    </requirement_group>


    <requirement_group id="Usability Requirements">

      <requirement_set caption="Probabilistic Risk Assessment">
          <requirement id_code="SR2ML-PRA-1">
              <description>The SR2ML plug-in shall support importing Event Tree Boolean logic structure to construct RAVEN Event Tree ExternalModel</description>
          </requirement>
      </requirement_set>

      <requirement_set caption="Probabilistic Risk Assessment">
          <requirement id_code="SR2ML-PRA-2">
              <description>The SR2ML plug-in shall support importing Fault Tree Boolean logic structure to construct RAVEN Fault Tree ExternalModel</description>
          </requirement>
      </requirement_set>

      <requirement_set caption="Probabilistic Risk Assessment">
          <requirement id_code="SR2ML-PRA-3">
              <description>The SR2ML plug-in shall support importing a generic Markov chain to construct RAVEN Markov chain ExternalModel</description>
          </requirement>
      </requirement_set>

      <requirement_set caption="Probabilistic Risk Assessment">
          <requirement id_code="SR2ML-PRA-4">
              <description>The SR2ML plug-in shall support importing Reliability Block Diagram (RBD) Boolean logic structure to construct RAVEN RBD ExternalModel</description>
          </requirement>
      </requirement_set>

